
@model WebBanHang.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Grid row-->
<div class="row justify-content-center mt-4">
    <!--Grid column-->
    <div class="col-md-3 mb-4">
        <img src="@Model.Image"
             class="img-fluid hover-shadow"
             alt="Los Angeles Skyscrapers" style="height: 300px;" />
    </div>
    <!--Grid column-->
    <!--Grid column-->
    <div class="col-md-6 mb-4">
        <!--Content-->
        <div class="p-4">
            <div class="mb-3">
                <a href="">
                    <span class="badge bg-dark me-1">Category 2</span>
                </a>
                <a href="">
                    <span class="badge bg-info me-1">New</span>
                </a>
                <a href="">
                    <span class="badge bg-danger me-1">Bestseller</span>
                </a>
            </div>

            <p class="lead">
                <span class="me-1 text-danger">
                    <del>@String.Format("{0:0,0 VNĐ}", Model.Price)</del>
                </span>
                <span>@String.Format("{0:0,0 VNĐ}", Model.Discount)</span>
            </p>

            <p style="font-size: 20px"><strong>Mô tả</strong></p>

            <p>
                @Model.Description
            </p>

            <form class="d-flex justify-content-left">
                <!-- Default input -->
                <div class="form-outline me-1" style="width: 100px">
                    <input type="number" value="1" class="form-control" />
                </div>
                <a class="btn btn-primary ms-1" href="@Url.Action("AddToCart", "Cart", new { ProductId = Model.Id, returnUrl = Request.Url.ToString() })">
                    Thêm vào giỏ hàng
                    <i class="fas fa-shopping-cart ms-1"></i>
                </a>
            </form>
        </div>
        <!--Content-->
    </div>
    <!--Grid column-->
</div>
<!--Grid row-->
