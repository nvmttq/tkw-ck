@using WebBanHang.Models;

<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-white" id="header-fixed">
    <!-- Container wrapper -->
    <div class="container">
        <!-- Toggle button -->
        <button class="navbar-toggler"
                type="button"
                data-mdb-toggle="collapse"
                data-mdb-target="#navbarSupportedContent1"
                aria-controls="navbarSupportedContent1"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Collapsible wrapper -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent1">
            <!-- Navbar brand -->
            <a class="navbar-brand mt-2 mt-sm-0" href="/">
                    <img src="~/Images/logo.png" height="35" loading="lazy" />
            </a>
            <!-- Left links -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="/">TRANG CHỦ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://mdbootstrap.com/docs/standard/">Liên hệ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"
                       href="https://mdbootstrap.com/docs/standard/getting-started/installation/">Giới thiệu</a>
                </li>
            </ul>
            <!-- Left links -->
        </div>
        <!-- Collapsible wrapper -->
        <!-- Right elements -->
        <div class="d-flex align-items-center gap-2">
            <!-- Icon -->
            <a class="nav-link me-3" href="@Url.Action("Index", "Cart")">
                <i class="fas fa-shopping-cart"></i>



                @if (Session["cart"] != null)
                {
                    var c = Session["cart"] as ProductCart;
                    <span class="badge rounded-pill badge-notification bg-danger" id="number-of-productcart">@c.product.Count()</span>
                }
                else
                {
                    <span class="badge rounded-pill badge-notification bg-danger" id="number-of-productcart">0</span>
                }
            </a>
            @{
                var user = (User)Session["user"];
                if (Session["user"] != null)
                {


                        <div class="btn-group">
                            <button type="button" class="d-flex gap-1 align-items-center btn btn-primary dropdown-toggle" data-mdb-toggle="dropdown" aria-expanded="false">
                                <img src="https://mdbcdn.b-cdn.net/img/new/avatars/8.webp" class="rounded-circle" style="width: 30px;"
                                     alt="Avatar" />
                                <span>@user.FullName</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Thông tin</a></li>
                                <li><a class="dropdown-item" href="#">Cài đặt</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                            </ul>
                        </div>
                }
                else
                {
                    TempData["returnUrl"] = Request.Url.ToString();
                    <a class="nav-link me-3 border-end" href="@Url.Action("Login", "Account")">
                        Đăng nhập
                    </a>
                    <a class="nav-link me-3" href="@Url.Action("Register", "Account")">

                        Đăng ký
                    </a>
                }
            }

        </div>
        <!-- Right elements -->
    </div>
    <!-- Container wrapper -->
</nav>
<!-- Navbar -->