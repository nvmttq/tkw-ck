@model string
@{
    ViewBag.Title = "LinkReset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("LinkReset", "Account", new { uid = Model }, FormMethod.Post, new { @class = "mt-5" }))
{
    @Html.AntiForgeryToken()
    if(ViewBag.IncorrectResetPass != null)
    {
        <p class="text-danger">@ViewBag.IncorrectResetPass</p>
    }
    <div class="form-group" style="width: 50%;">
        <label>Mật khẩu mới</label>
        <input class="form-control form-control-lg" type="text" name="passNew" />
    </div>

    <div class="form-group" style="width: 50%;">
        <label>Nhập lại mật khẩu mới</label>
        <input class="form-control form-control-lg" type="text" name="passNewAgain" />
    </div>
    <input name="uid" value="@Model" hidden />

    <input type="submit" value="Xác nhận" class="btn-primary mt-3" />
}
