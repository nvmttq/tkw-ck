
@model List<WebBanHang.Models.Category>
@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="h5 text-center py-5 mb-0">Quản lý danh mục</h1>


<div class="d-flex align-items-center justify-content-between  mb-3">
    <div class="input-group" style="max-width: 50%;">
        <div class="form-outline" style="border-bottom: 1px solid black;">
            <input id="search-user" name="search-user" type="search" class="form-control" />
            <label class="form-label" for="form1">Tìm kiếm</label>
        </div>
        <button type="button" class="btn btn-primary">
            <i class="fas fa-search"></i>
        </button>
    </div>
    <div>
        <button type="button" class="btn btn-primary me-1 mb-2">
            <i class="fas fa-plus"></i> Tạo mới
        </button>
        <button type="button" class="btn btn-primary me-1 mb-2">
            <i class="fas fa-users"></i> Tạo mới hàng loạt
        </button>
    </div>
</div>
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>#</th>
            <th>Id</th>
            <th>Tên</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{ int stt = 0;}
        @foreach (var c in Model)
        {
            stt++;
            <tr>
                <td>@stt</td>
                <td>
                    <a href="#">categoryId=@c.Id</a>
                </td>
                <td>
                    <p class="fw-normal mb-1">@c.Name</p>
                </td>
                <td>
                    <a href="@Url.Action("Delete","CategoryManagerment", new { id=c.Id})" class="btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                            title="Xóa" style="background-color: #ED5565;">
                        <i class="fas fa-trash"></i>
                    </a>
                    <a href="@Url.Action("Edit","CategoryManagerment", new { id=c.Id})" class="btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                            title="Chỉnh sửa">
                        <i class="fas fa-pen"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
