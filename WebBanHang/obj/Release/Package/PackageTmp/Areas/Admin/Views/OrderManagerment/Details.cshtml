
@model List<WebBanHang.Models.OrderDetail>
@{
    ViewBag.Title = "Order Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h1 class="h5 text-center py-5 mb-0">Chi tiết đơn hàng @Html.Raw("DH"+Model[0].OrderId)</h1>

<div class="mb-3">
    <i class="fa fa-arrow-left"></i>
    @Html.ActionLink("Quay trở lại","Index", "OrderManagerment")
</div>
<div class="d-flex align-items-center justify-content-between">
    <div class="input-group" style="max-width: 50%;">
        <div class="form-outline" style="border-bottom: 1px solid black;">
            <input id="search-user" name="search-user" type="search" class="form-control" />
            <label class="form-label" for="form1">Search</label>
        </div>
        <button type="button" class="btn btn-primary">
            <i class="fas fa-search"></i>
        </button>
    </div>
    <div>
        <button type="button" class="btn btn-primary me-1 mb-2">
            <i class="fas fa-plus"></i> Tạo mới
        </button>
    </div>
</div>
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>#</th>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Tổng tiền</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{ int stt = 0;}
        @foreach (var order in Model)
        {
            var p = order.p;
            stt++;
            <tr>
                <td>@stt</td>

                <td>
                    <a href="@Url.Action("Details", "OrderManagerment")" data-mdb-toggle="tooltip" title="Xem chi tiết">productid=@p.Id</a>
                </td>

                <td>
                    <p class="fw-normal mb-1">@p.Name</p>
                </td>

                <td>
                    @order.Quantity
                </td>

                <td>
                    <span>@String.Format("{0:0,0 VNĐ}", order.Price)</span>

                </td>


                <td>
                    <button type="button" class="btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                            title="Xóa" style="background-color: #ED5565;">
                        <i class="fas fa-trash"></i>
                    </button>

                    <button type="button" class="btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                            title="Chỉnh sửa">
                        <i class="fas fa-pen"></i>
                    </button>

                    <button type="button" class="btn btn-success btn-sm me-1 mb-2 d-none" data-mdb-toggle="tooltip"
                            title="Xác nhận đã giao">
                        <i class="fas fa-check"></i>
                    </button>

                </td>
            </tr>
        }
    </tbody>
</table>
